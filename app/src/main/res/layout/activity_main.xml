<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:text="Twister App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Lista de jugadores -->
    <EditText
        android:id="@+id/playerInput"
        android:hint="Introduce nombre del jugador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/addPlayerButton"
        android:text="Añadir jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/playerList"
        android:text="Jugadores:\n"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Ruleta de extremidades -->
    <TextView
        android:id="@+id/extremidadText"
        android:text="Extremidad: -"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Ruleta de colores -->
    <TextView
        android:id="@+id/colorText"
        android:text="Color: -"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Botón para girar ruletas -->
    <Button
        android:id="@+id/spinButton"
        android:text="Girar ruletas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
